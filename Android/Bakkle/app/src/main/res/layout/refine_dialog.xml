<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:id="@+id/distance"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="56dp">

        <ImageView
            android:id="@+id/distanceIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person_pin"
            android:tint="@color/colorSecondaryText"/>

        <SeekBar
            android:id="@+id/distanceBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/distanceValue"
            android:layout_toEndOf="@+id/distanceIcon"/>

        <EditText
            android:id="@+id/distanceValue"
            android:layout_width="56dp"
            android:inputType="number"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="56dp">

        <ImageView
            android:id="@+id/moneyIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_attach_money"
            android:tint="@color/colorSecondaryText"/>

        <SeekBar
            android:id="@+id/priceBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/priceValue"
            android:layout_toEndOf="@+id/moneyIcon"/>

        <EditText
            android:id="@+id/priceValue"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:inputType="number"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>