<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.bakkle.bakkle.ItemPage">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/bakkle_icon"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal|top"
            android:id="@+id/itempic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_gravity="center"
            android:layout_alignBaseline="@+id/itempic"/>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tags"
                android:text="Tags: "
                android:layout_gravity="start|center_vertical"
                android:layout_marginBottom="28dp"
                android:layout_above="@+id/methodLabel"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/methodLabel"
                android:text="Method of Delivery"
                android:layout_marginBottom="126dp"
                android:layout_gravity="start|bottom"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/priceLabel"
                android:text="Price"
                android:layout_gravity="start|bottom"
                android:layout_alignTop="@+id/price"
                android:layout_alignParentStart="true"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/method"
                android:text="Pick up"
                android:layout_gravity="start|bottom"
                android:layout_alignTop="@+id/methodLabel"
                android:layout_alignEnd="@+id/price"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:text="$5.00"
                android:layout_gravity="start|bottom"
                android:layout_marginTop="42dp"
                android:layout_alignTop="@+id/methodLabel"
                android:layout_alignParentEnd="true"
                android:paddingRight="10dp" />
        </RelativeLayout>
    </FrameLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:text="Want"
        android:textColor="@color/white"
        android:background="@color/green"
        android:textStyle="bold"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal|bottom" />

</FrameLayout>
