<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bakkle.bakkle.Activities.AddItemActivity">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:background="@color/black"
        android:id="@+id/images">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/imageRelativeLayout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageCollection">


            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_camera"
                android:id="@+id/add"
                android:layout_toRightOf="@+id/imageCollection"
                android:layout_alignParentBottom="true"
                android:onClick="addAnotherImage" />

        </RelativeLayout>

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/images">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titlePrompt"
            android:text="Title"
            android:paddingRight="10dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleField"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/titlePrompt"
            android:layout_alignBaseline="@+id/titlePrompt"
            android:layout_alignRight="@+id/priceField"
            android:hint="Title"
            android:editable="false"
            android:inputType="text"
            android:lines="1"
            android:backgroundTint="@color/green"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@+id/title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pricePrompt"
            android:text="Price"
            android:paddingRight="10dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/priceField"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/pricePrompt"
            android:layout_alignBaseline="@+id/pricePrompt"
            android:hint="$--.--"
            android:numeric="decimal"
            android:inputType="numberDecimal"
            android:backgroundTint="@color/green"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tags"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_below="@+id/price">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tagsPrompt"
            android:text="Tags"
            android:paddingRight="10dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tagsField"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/tagsPrompt"
            android:layout_alignBaseline="@+id/tagsPrompt"
            android:hint="5 words to describe item"
            android:inputType="textCapWords"
            android:backgroundTint="@color/green" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/method"
        android:layout_below="@+id/tags"
        android:paddingLeft="16dp"
        android:layout_alignLeft="@+id/confirm"
        android:paddingBottom="25dp"
        android:text="Method"
        android:textStyle="bold"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/Methods"
        android:prompt="@string/choose"
        android:id="@+id/methodPicker"
        android:layout_alignTop="@+id/method"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black"
        android:paddingRight="16dp"
        android:paddingBottom="25dp"
        android:backgroundTint="@color/green" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share to Facebook?"
        android:textStyle="bold"
        android:paddingLeft="16dp"
        android:layout_alignBaseline="@+id/share"
        android:layout_alignLeft="@+id/confirm"/>


    <android.support.v7.widget.SwitchCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share"
        android:layout_above="@+id/confirm"
        android:layout_alignRight="@+id/confirm"
        android:paddingBottom="25dp"
        android:paddingRight="16dp"
        android:backgroundTint="@color/green"
        android:theme="@style/AppCompatTheme"
        android:backgroundTintMode="src_atop" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:id="@+id/confirm"
        android:layout_alignParentBottom="true"
        android:background="@color/green"
        android:textColor="@color/white"
        android:text="CONFIRM"
        android:onClick="uploadItem"
        android:textStyle="bold"/>


</RelativeLayout>
