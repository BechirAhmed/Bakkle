<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"
        android:src="@drawable/bakkle_icon"
        android:layout_weight="1"
        android:layout_gravity="top" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_gravity="top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title of item"
            android:id="@+id/txtItemTitle"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            android:singleLine="false"
            android:phoneNumber="true"
            android:lines="1"
            android:ellipsize="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Method of Delivery"
            android:id="@+id/txtItemMethod"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:lines="1"
            android:ellipsize="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tags"
            android:id="@+id/txtItemTags"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:lines="1"
            android:ellipsize="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="distance"
            android:id="@+id/txtItemDistance"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:lines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <TextView
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:text="$00000.00"
        android:id="@+id/textView3"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal|top"
        android:textColor="@android:color/darker_gray"
        android:textSize="24sp"
        android:lines="1"
        android:ellipsize="end" />
</LinearLayout>